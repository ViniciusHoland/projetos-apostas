<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Bilhete do Cliente</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        font-size: 17px;
      }
      .bilhete {
        background-color: #fff9c4;
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: 30px auto;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        font-size: 14px;
      }
      .linha {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #ccc;
        padding-bottom: 3px;
        margin-bottom: 3px;
      }
      .aposta-item {
        border-bottom: 1px dashed #bbb;
        padding: 5px 0;
      }
      .times-com-logo {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 5px;
        flex-wrap: wrap;
      }
      .times-com-logo img {
        width: 20px;
        height: 20px;
        object-fit: contain;
      }
      @media print {
        body {
          background: white;
        }
        .bilhete {
          max-width: 58mm;
          margin: 0 auto;
          box-shadow: none;
          border: none;
          font-size: 10px;
        }
        .no-print {
          display: none;
        }
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container">
      <div class="text-center my-3 no-print">
        <a
          href="/apostas/bilhete/<%= bilhete._id %>/print"
          target="_blank"
          class="btn btn-success"
        >
          <i class="fas fa-print"></i> Imprimir Bilhete
        </a>
      </div>

      <div class="bilhete">
        <div class="linha">
          <strong>DATA:</strong>
          <span>
            <%= new Date(bilhete.data).toLocaleString('pt-BR', { timeZone:
            'America/Sao_Paulo', day: '2-digit', month: '2-digit', year:
            'numeric', hour: '2-digit', minute: '2-digit' }) %>
          </span>
        </div>
        <div class="linha">
          <strong>CLIENTE:</strong>
          <span><%= bilhete.nomeCliente %></span>
        </div>
        <br />

        <div class="linha">
          <strong>APOSTA</strong>
          <strong>COTAÇÃO</strong>
        </div>

        <% bilhete.jogos.forEach(jogo => { %>
        <div class="aposta-item">
          <div><%= jogo.campeonato %></div>

          <div class="times-com-logo">
            <% if (jogo.logoCasa) { %>
            <img src="<%= jogo.logoCasa %>" alt="Logo Casa" />
            <% } %>
            <strong
              ><%= jogo.jogoNome?.split(" x ")[0] || "Time Casa" %></strong
            >

            <span>x</span>

            <strong
              ><%= jogo.jogoNome?.split(" x ")[1] || "Time Fora" %></strong
            >
            <% if (jogo.logoFora) { %>
            <img src="<%= jogo.logoFora %>" alt="Logo Fora" />
            <% } %>
          </div>

          <div>
            <small>
              <strong>Data/Hora:</strong>
              <%= new Date(jogo.dataHora).toLocaleString('pt-BR', { timeZone:
              'America/Sao_Paulo', day: '2-digit', month: '2-digit', year:
              'numeric', hour: '2-digit', minute: '2-digit' }) %>
            </small>
          </div>
          <div>Odd: <strong><%= jogo.tipoOdd %></strong></div>
          <div class="text-end">
            <small><%= jogo.valorOdd.toFixed(2) %></small>
          </div>

          <div style="display: flex; justify-content: space-between">
            <small>Status: </small>
            <strong><%= jogo.status || "Aberta" %></strong>
          </div>
        </div>
        <% }) %>

        <hr />

        <p><strong>Quantidade de Jogos:</strong> <%= bilhete.jogos.length %></p>
        <p>
          <strong>Cotação:</strong> <%= bilhete.cotacaoTotal ?
          bilhete.cotacaoTotal.toFixed(2) : "---" %>
        </p>
        <p>
          <strong>Total Apostado:</strong> R$ <%=
          bilhete.valorApostado.toFixed(2) %>
        </p>
        <p>
          <strong>Possível Retorno:</strong> R$ <%=
          bilhete.retornoEstimado.toFixed(2) %>
        </p>
      </div>
    </div>
  </body>
</html>
