<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Bilhete do Cliente</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        font-size: 18px;
      }
      .bilhete {
        background-color: #fff9c4; /* amarelo claro */
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: 30px auto;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        font-size: 14px;
      }
      .linha {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #ccc;
        padding-bottom: 3px;
        margin-bottom: 3px;
      }
      .aposta-item {
        border-bottom: 1px dashed #bbb;
        padding: 5px 0;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container">
      <div class="bilhete">
        <div class="linha">
          <strong>DATA:</strong>
          <span><%= new Date(bilhete.data).toLocaleString('pt-BR') %></span>
        </div>
        <div class="linha">
          <strong>CLIENTE:</strong>
          <span><%= bilhete.nomeCliente %></span>
        </div>
        <br />

        <div class="linha">
          <strong>APOSTA</strong>
          <strong>COTAÇÃO</strong>
        </div>

        <% bilhete.jogos.forEach(jogo => { %>
        <div class="aposta-item">
          <div><%= jogo.campeonato %></div>
          <div><strong><%= jogo.jogoNome %></strong></div>
          <div><%= jogo.timeCasa %> x <%= jogo.timeFora %></div>
          <div>
            <small>
              <strong>Data/Hora:</strong>
              <% if (jogo.dataHora) { 
                const [dataParte, horaParte] = jogo.dataHora.split(" - "); 
                const [dia, mes, ano] = dataParte.split("/");
              %>
                <%= `${dia}/${mes}/${ano} ${horaParte}` %>
              <% } else { %>
                Data não disponível
              <% } %>
            </small>
          </div>
          <div>Odd: <strong><%= jogo.tipoOdd %></strong></div>
          <div class="d-flex justify-content-between">
            <small>Status: <strong><%= jogo.status || "Aguardando" %></strong></small>
            <small><%= jogo.valorOdd.toFixed(2) %></small>
          </div>
        </div>
        <% }) %>

        <hr />

        <p><strong>Quantidade de Jogos:</strong> <%= bilhete.jogos.length %></p>
        <p>
          <strong>Cotação:</strong> <%= bilhete.cotacaoTotal ? bilhete.cotacaoTotal.toFixed(2) : "---" %>
        </p>
        <p>
          <strong>Total Apostado:</strong> R$ <%= bilhete.valorApostado.toFixed(2) %>
        </p>
        <p>
          <strong>Possível Retorno:</strong> R$ <%= bilhete.retornoEstimado.toFixed(2) %>
        </p>
      </div>
    </div>
  </body>
</html>